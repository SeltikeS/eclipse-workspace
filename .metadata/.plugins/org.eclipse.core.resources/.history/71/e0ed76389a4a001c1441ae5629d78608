#include <iostream>
#include <string>
using namespace std;

bool IsPalindrom(std::string s){
	int i = 0;
	int j = s.size() - 1;

	while(i < j){
		if(s[i] != s[j]){
			return 0;
		}

		++i;
		--j;
	}

	return 1;
}

int main() {

//	std::string s;
//	std::cin >> s;
	std::string s = "madam";


	std::cout << IsPalindrom(s) << std::endl;

	return 0;
}
